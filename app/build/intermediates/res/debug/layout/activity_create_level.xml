<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.beebzb.bakalarka.CreateLevelActivity">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:name="com.example.beebzb.bakalarka.layout.LeftMenuSimpleFragment"
        android:id="@+id/fragment" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/fragment"
        android:layout_toEndOf="@+id/fragment">

    <TextView style="@style/ScreenTitle"
        android:text="@string/title_activity_create_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sd" />

        <GridLayout style="@style/CreateLevelRow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/score_row_height"
            android:rowCount="1"
            android:columnCount="3"
            android:onClick="openActivity"
            android:id="@+id/g1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView1"
                android:src="@drawable/game1"
                android:layout_gravity="center_vertical" />

            <TextView style="@style/ScoreGameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_1"
                android:id="@+id/gamename1" />

        </GridLayout>

        <GridLayout style="@style/CreateLevelRow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/score_row_height"
            android:rowCount="1"
            android:onClick="openActivity"
            android:columnCount="3"
            android:id="@+id/g2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/game2"
                android:layout_gravity="center_vertical" />

            <TextView style="@style/ScoreGameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/game_2"
                android:id="@+id/gamename2" />

        </GridLayout>

        <GridLayout style="@style/CreateLevelRow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/score_row_height"
            android:rowCount="1"
            android:columnCount="3"
            android:onClick="openActivity"
            android:id="@+id/g3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/game3"/>

            <TextView style="@style/ScoreGameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/game_3"
                android:id="@+id/gamename3" />

        </GridLayout>

        <GridLayout style="@style/CreateLevelRow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/score_row_height"
            android:rowCount="1"
            android:onClick="openActivity"
            android:columnCount="3"
            android:id="@+id/g4">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/game4"/>

            <TextView style="@style/ScoreGameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/game_4"
                android:id="@+id/gamename4" />
        </GridLayout>


    </LinearLayout>



</RelativeLayout>
